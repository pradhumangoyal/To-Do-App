<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pradhuman.todo.AddActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/addActivityEditTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:inputType="textAutoCorrect"
            android:maxLength="10"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />
   
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category: "
            android:textSize="16sp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            app:layout_constraintLeft_toRightOf="@+id/imageView5"
            android:layout_marginLeft="8dp"
            android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            android:layout_marginTop="0dp" />

        <Spinner
            android:id="@+id/addActivityCategory"
            android:layout_width="79dp"
            android:layout_height="24dp"
            android:paddingRight="2dp"
            
            android:spinnerMode="dialog"
            android:tooltipText="Priority"
            app:layout_constraintLeft_toRightOf="@+id/textView3"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            android:layout_marginTop="0dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priority"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            app:layout_constraintLeft_toRightOf="@+id/imageView4"
            android:layout_marginLeft="16dp"
            android:id="@+id/textView2"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@+id/imageView4"
            android:layout_marginTop="0dp" />

        <Spinner
            android:id="@+id/addActivitPriority"
            android:layout_width="58dp"
            android:layout_height="21dp"
            android:hint="Enter Title"
            android:textSize="16sp"
            android:spinnerMode="dialog"
            app:layout_constraintLeft_toRightOf="@+id/textView2"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            android:layout_marginTop="0dp" />


    <EditText
            android:id="@+id/addActivityDate"
            android:layout_width="135dp"
        android:textSize="16sp"
            android:layout_height="42dp"
            android:focusable="false"
            android:hint="Enter Date "
            android:paddingRight="20dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView3"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        android:layout_marginTop="0dp"
        tools:layout_editor_absoluteY="220dp"
        app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/addActivityTime"
            android:layout_width="134dp"
            android:layout_height="42dp"
            android:focusable="false"
            android:hint="Enter Time"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/addActivityDate"
            android:layout_marginLeft="28dp"
            app:layout_constraintBottom_toBottomOf="@+id/addActivityDate"
            android:layout_marginBottom="0dp"
            tools:layout_editor_absoluteY="220dp" />
    

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textSize="16sp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            app:layout_constraintLeft_toRightOf="@+id/imageView7"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView7"
            android:layout_marginTop="0dp" />

        <EditText
            android:id="@+id/addActivityEditDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textAutoCorrect"
            android:maxLength="100"
            android:hint="Enter Some Description (Optional)"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView7" />
    
    <Button
        android:id="@+id/addActivitySubmitButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:text="OK"
        android:textSize="16sp"
        android:background="@android:color/transparent"
        android:textColor="#FFF"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="344dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.37742504" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/ic_date_range_black_24dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        android:layout_marginTop="24dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/ic_label_outline_black_24dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/ic_flag_black_24dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/ic_assignment_black_24dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />



</android.support.constraint.ConstraintLayout>
