<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:paddingTop="5dp"
    android:orientation="vertical">
    <ImageView android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/image_view"
        android:layout_margin="2dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"/>
    <TextView
        android:id="@+id/listItemTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/listItemDoneButton"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/image_view"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/listItemDateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listItemTitleView"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/holo_red_light"
        android:layout_toRightOf="@+id/image_view"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

    <TextView
        android:id="@+id/listItemTimeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/listItemTitleView"
        android:layout_toRightOf="@+id/listItemDateView"
        android:textSize="12sp"
        android:paddingLeft="5dp"
        android:textColor="@android:color/holo_red_light"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />


    <Button
        android:id="@+id/listItemDoneButton"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:padding="12dp"
        android:layout_margin="5dp"
        android:background="@drawable/ic_done_black_24dp"
        android:focusable="false"
        />
</RelativeLayout>